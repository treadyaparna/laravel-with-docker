                                                        "name": {
                                                            "type": "string",
                                                            "example": "User"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "user@test.com"
                                                        },
                                                        "emailVerifiedAt": {
                                                            "type": "string",
                                                            "example": null
                                                        },
                                                        "updatedAt": {
                                                            "type": "string",
                                                            "example": "2022-06-28 06:06:17"
